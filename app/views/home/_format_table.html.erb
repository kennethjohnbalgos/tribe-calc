<table class="table table-hover table-bordered mt-3">
  <thead>
    <tr>
      <th scope="col">
        <div class="d-none d-md-inline-block">
          Submission
        </div>
        Format
      </th>
      <th scope="col">
        <div class="d-none d-md-inline-block">
          Format
        </div>
        Code
      </th>
      <th scope="col">Bundle</th>
    </tr>
  </thead>
  <tbody>
    <% Format.all.each do |format| %>
      <tr class="format-entry">
        <td class="align-middle">
          <%= format.name %>
        </td>
        <td class="align-middle">
          <%= format.code %>
        </td>
        <td>
          <% format.format_bundles.sort_quantity.each_with_index do |bundle, index| %>
            <% if index != 0 %>
              <br/>
            <% end %>
            <%= bundle.quantity %>
            @
            <%= number_to_currency(bundle.price) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>